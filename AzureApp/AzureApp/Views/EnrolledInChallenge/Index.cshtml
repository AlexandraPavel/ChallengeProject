@model IEnumerable<AzureApp.EnrolledInChallenge>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumberDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Challenge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumberDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Challenge.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EnrollingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EnrollingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EnrollingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
