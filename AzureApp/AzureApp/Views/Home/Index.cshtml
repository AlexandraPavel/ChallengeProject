            </div>
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
               @* <label class="control-label">Play Voice</label>*@
                <audio controls>
                   @ViewBag.result
                </audio>
               @* <audio autoplay="autoplay" src="@ViewBag.result">
                </audio>*@
            </div>
        </div>
    </form>
</div>
