@model IEnumerable<AzureApp.DescriptionConsumer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ChallengesFinished)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChallengesCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChallengesInUse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUserNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ChallengesFinished)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChallengesCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChallengesInUse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUserNavigation.FirstName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DescriptionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DescriptionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DescriptionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
